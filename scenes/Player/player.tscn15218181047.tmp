script/source = "extends CharacterBody2D

#region constants
const COYOTE_TIME = 0.2
const JUMP_BUFFER_TIME = 0.1
#endregion

@onready var sprite: AnimatedSprite2D = $AnimatedSprite2D
@onready var animated_sprite_2d: AnimatedSprite2D = $AnimatedSprite2D


#region variables
@export var SPEED: float = 250.0
@export var JUMP_VELOCITY: float = -400.0

var coyote_timer := 0.0
var jump_buffer_timer := 0.0
var is_jumping := false
#endregion

var gravity
   
func _physics_process(delta: float) -> void:
	gravity = get_gravity()
	@warning_ignore(\"unused_variable\")
	var on_wall = is_on_wall() and not is_on_floor()
	
	if is_on_floor():
		floor_process(delta)
	#elif on_wall:
		#wall_process(delta)
	else:
		air_process(delta)
		
	# jump
	if jump_buffer_timer > 0 and (is_on_floor() or coyote_timer > 0):
		velocity.y = JUMP_VELOCITY
		is_jumping = true
		jump_buffer_timer = 0.0
		coyote_timer = 0.0
		
	# jump cut
	if Input.is_action_just_released(\"moveup\") and is_jumping and velocity.y < 0:
		velocity.y *= 0.3 # cuts jump velocity to -50%

	# horizontal Movement
	var direction = Input.get_axis(\"moveleft\", \"moveright\")
	velocity.x = direction * SPEED
	sprite.flip_h = direction
	sprite.flip_h = true if direction < 0 else false
	
	play_animations()
	move_and_slide()

func floor_process(delta: float):
	is_jumping = false
	coyote_timer = COYOTE_TIME

	if Input.is_action_just_pressed(\"moveup\"):
		jump_buffer_timer = JUMP_BUFFER_TIME
		
	coyote_timer = max(coyote_timer - delta, 0)
	jump_buffer_timer = max(jump_buffer_timer - delta, 0)

func air_process(delta: float):
	if velocity.y > 0:
		velocity += gravity * 1.5 * delta
	elif abs(velocity.y) < 50:
		velocity += gravity * 0.5 * delta
	else:
		velocity += gravity * delta
	velocity.y = clamp(velocity.y, -1000, 500)

#func wall_process(delta: float):

func play_animations(): 
	if abs(velocity.x) > 0 and velocity.y == 0:
		sprite.play(\"run\")
	elif not is_on_floor() and velocity.y < 0:
			sprite.play(\"jump\")
	else:
		sprite.play(\"idle\")
"

